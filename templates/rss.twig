<?xml version="1.0" encoding="UTF-8"?>
<rss version="2.0" xmlns:media="http://search.yahoo.com/mrss/" xmlns:dc="http://purl.org/dc/elements/1.1/">
  <channel>
    <title>GOG Games</title>
    <link>{{ base_url() }}</link>
    <description>Newly added/updated games from GOG-Games.com</description>
    <language>en-us</language>
    <lastBuildDate>{{ now|date(DATE_RSS) }}</lastBuildDate>
    <docs>http://blogs.law.harvard.edu/tech/rss</docs>
    {% for game in games %}
    <item>
      <title>{{ game.title }}</title>
      <pubDate>{{ game.last_update|date(DATE_RSS) }}</pubDate>
      <media:content width="196" height="110" url="{{ base_url() }}/static/img/games/thumb/{{ game.id }}.jpg" type="image/jpeg" />
      <enclosure url="{{ base_url() }}/static/img/games/thumb/{{ game.id }}.jpg" type="image/jpeg" />
      <link>{{ base_url() }}/game/{{ game.slug }}</link>
      <guid isPermaLink="false">{{ game.id }} {{ game.last_update }}</guid>
    </item>
    {% endfor %}
  </channel>
</rss>
